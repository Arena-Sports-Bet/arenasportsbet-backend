generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id
  username      String 
  email         String @unique
  password      String
  birthdate     DateTime
  cpf           String @unique
  address       String
  zipcode       String
  country       String
  phone_number  String @unique
  state         String
  city          String
  account       Account?

  @@map("users")
}

model Account {
  id              String  @id
  account_balance Int     
  bonus_balance   Int     
  user_id         String  @unique
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("accounts")
}